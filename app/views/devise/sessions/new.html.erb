<div class="flex-1 bg-gray-50 flex items-center justify-center">
  <div class="max-w-md w-full mx-auto px-6">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Welcome Back</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-6">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="mb-6">
          <%= f.submit "Sign In", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>

      <div class="text-center space-y-2">
        <p class="text-gray-600">
          Don't have an account? 
          <%= link_to "Sign up", new_user_registration_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        </p>
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
  </div>
</div>