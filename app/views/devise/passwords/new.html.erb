<div class="flex-1 bg-gray-50 flex items-center justify-center">
  <div class="max-w-md w-full mx-auto px-6">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        </div>

        <div class="mb-6">
          <%= f.submit "Send me reset password instructions", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>

      <div class="text-center space-y-2">
        <p class="text-gray-600">
          Remember your password? 
          <%= link_to "Sign in", new_user_session_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        </p>
        <p class="text-gray-600">
          Don't have an account? 
          <%= link_to "Sign up", new_user_registration_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        </p>
      </div>
    </div>
  </div>
</div>